---
BasedOnStyle: GNU

# Indentation settings
IndentWidth: 4  # Use 4 spaces for indentation
ContinuationIndentWidth: 4  # Indentation for continued lines

# Short statements formatting
AllowShortBlocksOnASingleLine: true
AllowShortCaseLabelsOnASingleLine: true
AllowShortFunctionsOnASingleLine: All
# Uncommenting these will sometimes attach `if () {}` or `for () {}` to the next statement.
# AllowShortIfStatementsOnASingleLine: true
# AllowShortLoopsOnASingleLine: true

# Function return types
AlwaysBreakAfterDefinitionReturnType: None
AlwaysBreakAfterReturnType: None

# Brace styles
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass:      true
  AfterControlStatement: true
  AfterEnum:       true
  AfterFunction:   true
  AfterNamespace:  true
  AfterStruct:     true
  AfterUnion:      true
  AfterExternBlock: true
  BeforeCatch:     true
  BeforeElse:      true
  IndentBraces:    true
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false

# Code style adjustments
Cpp11BracedListStyle: true
KeepEmptyLinesAtTheStartOfBlocks: false
MaxEmptyLinesToKeep: 1
NamespaceIndentation: All

# Penalties and alignments
PenaltyExcessCharacter: 100
PenaltyReturnTypeOnItsOwnLine: 1
PointerAlignment: Left  # Change to Left if you prefer `int* ptr;` over `int *ptr;`
SortIncludes: false
SpaceBeforeParens: Never
SpacesInContainerLiterals: false
